{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "litestatic site out",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Launch Python Web Server",
            "type": "shell",
            "command": "python3 -m http.server -d out",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}